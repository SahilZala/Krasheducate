<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewProfileActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar2" />

        <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

            <LinearLayout


                android:orientation="vertical"
                android:padding="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                        <View
                            android:layout_height="10dp"
                            android:layout_width="0dp"
                            />
                        <RelativeLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <androidx.cardview.widget.CardView
                                android:gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="50dp"
                                >

                                <com.mikhaellopez.circularimageview.CircularImageView
                                    android:id="@+id/profile_image"
                                    android:layout_height="90dp"
                                    android:layout_width="90dp"
                                    android:background="@drawable/download"
                                    />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"

                            />

                        <RelativeLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/new_profile_user_name"
                                android:textSize="20dp"
                                android:text="User Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="#303035"
                                />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"

                            />
                        <RelativeLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/new_profile_user_email"
                                android:textSize="15dp"
                                android:text="zalaXXX-XX.com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/grey_1000"
                                />

                        </RelativeLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"

                            />

                        <RelativeLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    app:cardElevation="2dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    card_view:cardCornerRadius="2dp"

                                    >

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        >


                                        <TextView
                                            android:text="Video"
                                            android:textSize="12dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="6dp" />

                                        <TextView
                                            android:id="@+id/video_c"
                                            android:fontFamily="@font/roboto_bold"
                                            android:textColor="@color/choclaty"
                                            android:text="0"
                                            android:textSize="22dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                   app:cardElevation="2dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    card_view:cardCornerRadius="2dp"

                                    >
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        >


                                        <TextView
                                            android:text="Notes"
                                            android:textSize="12dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="6dp" />

                                        <TextView
                                            android:id="@+id/nots_c"
                                            android:fontFamily="@font/roboto_bold"
                                            android:textColor="@color/choclaty"
                                            android:text="0"
                                            android:textSize="22dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    app:cardElevation="2dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    card_view:cardCornerRadius="2dp"

                                    >

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        >


                                        <TextView
                                            android:text="Points"
                                            android:textSize="12dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="6dp" />

                                        <TextView
                                            android:id="@+id/new_profile_user_points"
                                            android:fontFamily="@font/roboto_bold"
                                            android:textColor="@color/choclaty"
                                            android:text="0"
                                            android:textSize="22dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="20dp"
                            android:textColor="@color/black_mate_2"
                            />

                            <View
                                android:layout_height="20dp"
                                android:layout_width="match_parent"
                                />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/comment_feedback"
                                android:minHeight="160dp"
                                android:layout_marginLeft="5dp"
                                app:cardCornerRadius="15dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/sky_blue"
                                >

                                <LinearLayout

                                    android:padding="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >

                                    <androidx.cardview.widget.CardView

                                        app:cardCornerRadius="10dp"
                                        android:background="@color/cream_white"
                                        android:paddingRight="5dp"
                                        android:paddingLeft="5dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        >

                                        <RelativeLayout
                                            android:paddingRight="10dp"
                                            android:paddingLeft="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="?"
                                                android:fontFamily="@font/roboto_bold"
                                                android:textSize="30dp"
                                                android:textColor="@color/choclaty"
                                                />

                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>

                                    <View
                                        android:layout_height="10dp"
                                        android:layout_width="0dp"
                                        />

                                    <TextView
                                        android:textSize="12dp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Ask Question"
                                        />


                                    <View
                                        android:layout_height="15dp"
                                        android:layout_width="0dp"
                                        />


                                   <LinearLayout
                                       android:layout_height="wrap_content"
                                       android:layout_width="match_parent"
                                       android:orientation="horizontal"
                                       >

                                       <TextView
                                           android:textColor="@color/black_mate_2"
                                           android:layout_weight="1"
                                           android:textSize="15dp"
                                           android:fontFamily="@font/roboto_bold"
                                           android:layout_height="wrap_content"
                                           android:layout_width="wrap_content"
                                           android:text="Question and Feedback"
                                           />


                                       <ImageButton
                                           android:layout_gravity="bottom"
                                           android:layout_height="20dp"
                                           android:layout_width="20dp"
                                           android:background="@drawable/ic_baseline_navigate_next_24"
                                           />
                                   </LinearLayout>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                            <View
                                android:layout_height="5dp"
                                android:layout_width= "0dp"
                                />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/logout_card"
                                android:minHeight="160dp"
                                android:layout_marginRight="5dp"
                                app:cardCornerRadius="15dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/golden_yellow"
                                >

                                <LinearLayout
                                    android:padding="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >

                                    <androidx.cardview.widget.CardView

                                        app:cardCornerRadius="10dp"
                                        android:background="@color/cream_white"
                                        android:paddingRight="20dp"
                                        android:paddingLeft="5dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        >

                                        <RelativeLayout
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"
                                            android:paddingRight="10dp"
                                            android:paddingLeft="10dp"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            >

                                            <ImageButton
                                                android:layout_height="20dp"
                                                android:layout_width="20dp"
                                                android:background="@drawable/ic_baseline_logout_24"
                                                />

                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>

                                    <View
                                        android:layout_height="10dp"
                                        android:layout_width="0dp"
                                        />

                                    <TextView
                                        android:textSize="12dp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Take Logout"
                                        />


                                    <View
                                        android:layout_height="15dp"
                                        android:layout_width="0dp"
                                        />


                                    <LinearLayout
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        >

                                        <TextView
                                            android:textColor="@color/black_mate_2"
                                            android:layout_weight="1"
                                            android:textSize="15dp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:text="Sure you want logout"
                                            />


                                        <ImageButton
                                            android:layout_gravity="bottom"
                                            android:layout_height="20dp"
                                            android:layout_width="20dp"
                                            android:background="@drawable/ic_baseline_navigate_next_24"
                                            />
                                    </LinearLayout>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>





                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_height="10dp"
                    android:layout_width="0dp"
                    />


                <View
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/refer_earn"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#512E5F"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            >
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Refer and Earn"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textSize="20dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    />

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="share code and earn point"
                                    android:textColor="@color/ligh_grey"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:gravity="center"

                            android:layout_height="match_parent"
                            android:layout_width="wrap_content" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_navigate_next_white"
                                />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/change_password"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black_mate_2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            >
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Change Password"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textSize="20dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    />

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="change your password whenever you want"
                                    android:textColor="@color/ligh_grey"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:gravity="center"

                            android:layout_height="match_parent"
                            android:layout_width="wrap_content" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_navigate_next_white"
                                />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.FoldingCube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/smooth_ligh_blue"
        android:layout_centerInParent="true"/>
</RelativeLayout>
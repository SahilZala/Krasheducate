<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:id="@+id/lyt_parent2"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardCornerRadius="10dp"
                >
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:background="#F1C40F"
                    >

                    <TextView
                        android:id="@+id/noti_index"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:textColor="@color/cream_white"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View android:layout_height="0dp"
                android:layout_width="20dp"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="Topic name"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/dark_blue"
                    android:textSize="20dp"

                    android:id="@+id/noti_topic_name"

                    />

                <View android:layout_height="5dp"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/noti_desc"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:text="description"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/dark_grey_mate"
                    android:textSize="12dp"

                    />

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:gravity="bottom"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:gravity="bottom"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@drawable/gradient_demo"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
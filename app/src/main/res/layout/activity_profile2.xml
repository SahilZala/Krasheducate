<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_white"
    tools:context=".ProfileActivity">



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >


            <LinearLayout
                android:padding="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_height="15dp"
                    android:layout_width="0dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"

                        android:layout_height="40dp"
                        android:layout_width="40dp" >

                        <RelativeLayout
                            android:gravity="center"
                            android:background="@color/sky_blue"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_baseline_settings_24"
                                android:layout_height="25dp"
                                android:layout_width="25dp">

                            </ImageView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_height="0dp"
                        android:layout_width="20dp" />

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="18dp"
                                android:text="Account"
                                android:textColor="@color/black_mate"
                                android:fontFamily="@font/roboto_medium"
                                />


                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="12dp"
                                android:text="Edit and manage your account details"
                                android:textColor="@color/ligh_grey"
                                android:fontFamily="@font/roboto_medium"
                                />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


                <View
                    android:layout_height="40dp"
                    android:layout_width="0dp" />

                <androidx.cardview.widget.CardView

                    android:elevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <RelativeLayout
                        android:background="#F2F3F4"
                        android:padding="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                >



                                <androidx.cardview.widget.CardView
                                    app:cardCornerRadius="2dp"
                                    android:backgroundTint="@color/ligh_grey"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content">
                                    <ImageView
                                        android:id="@+id/user_image_profile2"
                                        android:layout_height="35dp"
                                        android:layout_width="35dp"
                                        android:background="@drawable/download"
                                        />
                                </androidx.cardview.widget.CardView>


                                <View android:layout_height="wrap_content"
                                    android:layout_width="20dp"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    >

                                    <TextView
                                        android:id="@+id/user_name_profile2"
                                        android:maxLength="30"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textSize="15dp"
                                        android:text="User Name"
                                        android:textColor="@color/black_mate_2"
                                        android:fontFamily="@font/roboto_medium"
                                        />

                                    <View android:layout_height="2dp"
                                        android:layout_width="0dp" />

                                    <TextView
                                        android:maxLength="40"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textSize="10dp"
                                        android:text="Edit and manage your account details"
                                        android:textColor="@color/ligh_grey"
                                        android:fontFamily="@font/roboto_medium"
                                        />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:gravity="right"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <RelativeLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content">

                                        <ImageButton
                                            android:id="@+id/update_username_profile2"
                                            android:backgroundTint="@color/ligh_grey"
                                            android:background="@drawable/ic_baseline_navigate_next_24"
                                            android:layout_height="25dp"
                                            android:layout_width="25dp" />

                                    </RelativeLayout>
                                </RelativeLayout>

                            </LinearLayout>


                            <View android:layout_height="20dp"
                                android:layout_width="0dp" />

                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content">


                                    <TextView
                                        android:textColor="@color/ligh_grey"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Email"
                                        />

                                    <View
                                        android:layout_height="4dp"
                                        android:layout_width="0dp" />

                                    <TextView
                                        android:id="@+id/user_mail_profile2"
                                        android:maxLength="30"
                                        android:textColor="@color/black_mate_2"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="15dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="abc@gmail.com"
                                        />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:gravity="right"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <RelativeLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content">

                                        <ImageButton
                                            android:id="@+id/email_update_profile2"
                                            android:backgroundTint="@color/ligh_grey"
                                            android:background="@drawable/ic_baseline_navigate_next_24"
                                            android:layout_height="25dp"
                                            android:layout_width="25dp" />

                                    </RelativeLayout>
                                </RelativeLayout>

                            </LinearLayout>


                            <View android:layout_height="15dp"
                                android:layout_width="match_parent" />

                            <View
                                android:background="@color/ligh_grey"
                                android:layout_height="1dp"
                                android:layout_width="match_parent" />


                            <View android:layout_height="20dp"
                                android:layout_width="match_parent" />


                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content">


                                    <TextView
                                        android:textColor="@color/ligh_grey"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Mobile"
                                        />

                                    <View
                                        android:layout_height="4dp"
                                        android:layout_width="0dp" />

                                    <TextView
                                        android:id="@+id/user_mobileno_profile2"
                                        android:maxLength="30"
                                        android:textColor="@color/black_mate_2"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="15dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="8459888254"
                                        />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:gravity="right"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <RelativeLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content">

                                        <ImageButton
                                            android:id="@+id/mobileno_update_profile2"
                                            android:backgroundTint="@color/ligh_grey"
                                            android:background="@drawable/ic_baseline_navigate_next_24"
                                            android:layout_height="25dp"
                                            android:layout_width="25dp" />

                                    </RelativeLayout>
                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <View android:layout_height="40dp"
                    android:layout_width="0dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"

                        android:layout_height="40dp"
                        android:layout_width="40dp" >

                        <RelativeLayout
                            android:gravity="center"
                            android:background="@color/sky_blue"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_baseline_mail_24"
                                android:layout_height="25dp"
                                android:layout_width="25dp">

                            </ImageView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_height="0dp"
                        android:layout_width="20dp" />

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="18dp"
                                android:text="Feedback and Logout"
                                android:textColor="@color/black_mate"
                                android:fontFamily="@font/roboto_medium"
                                />


                            <TextView
                                android:maxLength="50"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="12dp"
                                android:text="Reach us with your feedback and question"
                                android:textColor="@color/ligh_grey"
                                android:fontFamily="@font/roboto_medium"
                                />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


                <View
                    android:layout_height="40dp"
                    android:layout_width="0dp" />

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <RelativeLayout
                        android:background="#F2F3F4"
                        android:padding="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            >

                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content">



                                    <View
                                        android:layout_height="4dp"
                                        android:layout_width="0dp" />

                                    <TextView
                                        android:maxLength="30"
                                        android:textColor="@color/black_mate_2"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="15dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Feedback and Question"
                                        />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:gravity="right"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <RelativeLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content">

                                        <ImageButton
                                            android:backgroundTint="@color/ligh_grey"
                                            android:background="@drawable/ic_baseline_navigate_next_24"
                                            android:layout_height="25dp"
                                            android:layout_width="25dp" />

                                    </RelativeLayout>
                                </RelativeLayout>

                            </LinearLayout>


                            <View android:layout_height="15dp"
                                android:layout_width="match_parent" />

                            <View
                                android:background="@color/ligh_grey"
                                android:layout_height="1dp"
                                android:layout_width="match_parent" />


                            <View android:layout_height="20dp"
                                android:layout_width="match_parent" />


                            <LinearLayout android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content">



                                    <TextView
                                        android:maxLength="50"
                                        android:textColor="@color/black_mate_2"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="15dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Logout"
                                        />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_gravity="center"
                                    android:gravity="right"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <RelativeLayout
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content">

                                        <ImageButton
                                            android:id="@+id/logout_profile2"
                                            android:backgroundTint="@color/ligh_grey"
                                            android:background="@drawable/ic_baseline_navigate_next_24"
                                            android:layout_height="25dp"
                                            android:layout_width="25dp" />

                                    </RelativeLayout>
                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



                <View
                    android:layout_height="50dp"
                    android:layout_width="0dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>
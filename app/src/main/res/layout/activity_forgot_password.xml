<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_white"
    tools:context="com.educate.educate.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:padding="15dp"
                    android:background="@color/cream_white"
                    android:backgroundTint="@color/cream_white"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputLayout

                        app:startIconDrawable="@drawable/ic_baseline_supervised_user_circle_24"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="user name"
                        app:hintTextColor="@color/black_mate_2"
                        app:boxStrokeColor="@color/royal_blue"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/cream_white"
                            android:inputType="text"
                            android:textSize="20dp"
                            android:fontFamily="@font/roboto_light"
                            android:id="@+id/user_name_forget_pass"
                            android:textColor="@color/royal_blue"
                            android:maxLength="10"
                            android:textColorHint="@color/dark_grey_mate"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:padding="15dp"
                    android:background="@color/cream_white"
                    android:backgroundTint="@color/cream_white"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputLayout

                        app:startIconDrawable="@drawable/ic_baseline_phone_android_24"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="mobile no"
                        app:hintTextColor="@color/black_mate_2"
                        app:boxStrokeColor="@color/royal_blue"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/cream_white"
                            android:inputType="number"
                            android:textSize="20dp"
                            android:fontFamily="@font/roboto_light"
                            android:id="@+id/mobile_no_forget"
                            android:textColor="@color/royal_blue"
                            android:maxLength="10"
                            android:textColorHint="@color/dark_grey_mate"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:padding="15dp"
        >

        <com.google.android.material.button.MaterialButton

            android:id="@+id/submit_button_forget"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/sky_blue"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="5dp"
            android:text="Continue"
            android:textColor="@color/cream_white"
            app:cornerRadius="5dp" />

    </RelativeLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.FoldingCube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/smooth_ligh_blue"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>


</RelativeLayout>
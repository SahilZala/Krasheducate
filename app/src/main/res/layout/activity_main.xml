<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black_mate"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <View
                android:layout_height="50dp"
                android:layout_width="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp"
                android:text="Welcome back!"
                android:textColor="@color/cream_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            </RelativeLayout>

            <View

                android:layout_height="5dp"
                android:layout_width="0dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18dp"
                    android:text="Sign in to your account"
                    android:textColor="@color/ligh_grey"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </RelativeLayout>


            <View
                android:layout_height="50dp"
                android:layout_width="0dp" />

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/dark_grey_mate"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_height="match_parent"
                        android:layout_width="120dp">
                        <TextView
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_width="100dp"
                            android:text="Mobileno"
                            android:textSize="18dp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/ligh_grey"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@color/ligh_grey"
                        android:backgroundTint="@color/ligh_grey"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textFiel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""

                            app:boxCornerRadiusTopStart="0dp"
                            app:boxCornerRadiusTopEnd="0dp"
                            app:boxCornerRadiusBottomStart="0dp"
                            app:boxCornerRadiusBottomEnd="0dp"
                            app:boxStrokeColor="@color/dark_grey_mate"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/dark_grey_mate"
                                android:inputType="number"
                                android:textSize="20dp"
                                android:fontFamily="@font/roboto_bold"
                                android:id="@+id/login_mobile_no"


                                android:textColor="@color/cream_white"

                                />

                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>





                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <View android:layout_height="20dp"
                android:layout_width="0dp"/>


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/dark_grey_mate"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Password"
                            android:textAlignment="center"
                            android:textColor="@color/ligh_grey"
                            android:textSize="18dp" />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ligh_grey"
                        android:backgroundTint="@color/ligh_grey"
                        android:gravity="center"
                        android:textAlignment="center">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="0dp"
                            app:boxCornerRadiusBottomStart="0dp"
                            app:boxCornerRadiusTopEnd="0dp"
                            app:boxCornerRadiusTopStart="0dp"
                            app:boxStrokeColor="@color/dark_grey_mate"

                            app:endIconMode="password_toggle">

                            <com.google.android.material.textfield.TextInputEditText

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/dark_grey_mate"
                                android:fontFamily="@font/roboto_bold"
                                android:inputType="textPassword"
                                android:textColor="@color/cream_white"
                                android:id="@+id/login_password"
                                android:textColorHint="@color/dark_grey_mate"
                                android:textSize="20dp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <View android:layout_height="20dp"
                android:layout_width="0dp" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Forget Password?"
                android:textColor="@color/cream_white"
                android:fontFamily="@font/roboto_regular"
                android:gravity="right"
                android:textSize="15dp"
                />

            <View android:layout_height="30dp"
                android:layout_width="0dp" />


            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/smooth_ligh_blue"
                android:id="@+id/log_in"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Continue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/cream_white"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="5dp"
                app:cornerRadius="5dp"
                />


            <View android:layout_height="20dp"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/sign_up_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Don't have an account?  Sign Up"
                android:textColor="@color/cream_white"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:textSize="17dp"
                />

            <View android:layout_height="30dp"
                android:layout_width="0dp" />


        </LinearLayout>





    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cream_white"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <View
                android:layout_height="50dp"
                android:layout_width="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp"
                android:text="Keep Connected"
                android:textColor="@color/smooth_ligh_blue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            </RelativeLayout>

            <View

                android:layout_height="5dp"
                android:layout_width="0dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18dp"
                    android:text="Enter your mobileno and password to get access your account"
                    android:textColor="#9FA4AC"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </RelativeLayout>


            <View
                android:layout_height="50dp"
                android:layout_width="0dp" />


                <RelativeLayout
                    android:background="@color/cream_white"
                    android:backgroundTint="@color/cream_white"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mobile_layout"
                        app:startIconDrawable="@drawable/ic_baseline_phone_android_24"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="mobileno"
                        app:hintTextColor="@color/smooth_ligh_blue"
                        app:endIconMode="custom"
                        app:endIconTint="#008000"
                        app:boxStrokeColor="@color/dark_blue"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/cream_white"
                            android:inputType="number"
                            android:textSize="20dp"
                            android:fontFamily="@font/roboto_light"
                            android:id="@+id/login_mobile_no"
                            android:textColor="@color/black_mate"
                            android:maxLength="10"
                            android:textColorHint="@color/dark_grey_mate"
                            />

                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

            <View android:layout_height="20dp"
                android:layout_width="0dp"/>


            <RelativeLayout
                android:background="@color/cream_white"
                android:backgroundTint="@color/cream_white"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="password"
                    app:hintTextColor="@color/smooth_ligh_blue"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeColor="@color/dark_blue"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/cream_white"
                        android:inputType="textPassword"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:id="@+id/login_password"
                        android:textColor="@color/black_mate"
                        android:textColorHint="@color/dark_grey_mate"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>



            <View android:layout_height="20dp"
                android:layout_width="0dp" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Forget Password?"
                android:textColor="@color/black_mate"
                android:fontFamily="@font/roboto_regular"
                android:gravity="right"
                android:textSize="15dp"
                />

            <View android:layout_height="30dp"
                android:layout_width="0dp" />


            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/smooth_blue"
                android:id="@+id/log_in"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Continue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/cream_white"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                app:cornerRadius="5dp"
                android:gravity="center"
                android:elevation="1dp"
                />


            <View android:layout_height="10dp"
                android:layout_width="0dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="OR"
                android:textColor="@color/black_mate"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textSize="15dp"
                />


            <View android:layout_height="10dp"
                android:layout_width="0dp" />




            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/cream_white"
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Account"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/smooth_blue"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                app:cornerRadius="5dp"
                android:gravity="center"
                android:elevation="1dp"
                />


            <View android:layout_height="30dp"
                android:layout_width="0dp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.FoldingCube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/smooth_ligh_blue"
        android:layout_centerInParent="true"/>

</RelativeLayout>
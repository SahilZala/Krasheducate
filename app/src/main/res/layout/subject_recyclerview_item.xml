<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:id="@+id/lyt_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardCornerRadius="10dp"
                >
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:background="#F1C40F"
                >

                <TextView
                    android:id="@+id/subject_index"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textSize="20dp"
                    android:textColor="@color/cream_white"
                    />

            </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View android:layout_height="0dp"
                android:layout_width="20dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >


                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="Subject name"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black_mate_2"
                    android:textSize="16dp"
                    android:id="@+id/item_subject_name"

                    />

                <View android:layout_height="8dp"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/subject_desc"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="description"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/grey_1000"
                    android:textSize="10dp"
                    android:maxLength="30"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <ImageButton
                android:id="@+id/subject_enter"
                android:background="@drawable/ic_baseline_navigate_next_24"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:gravity="bottom"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:gravity="bottom"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@drawable/gradient_demo"
            />
    </RelativeLayout>

</LinearLayout>
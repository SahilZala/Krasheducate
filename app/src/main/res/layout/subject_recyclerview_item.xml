<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#273746"
    app:cardCornerRadius="10dp"
    android:id="@+id/lyt_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp"
    >

    <RelativeLayout
        android:padding="10dp"
        android:background="#151E2A"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Created by"
            android:textSize="10dp"
            android:textColor="@color/ligh_grey"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="5dp"/>

            <LinearLayout
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/item_subject_name"
                    android:maxLength="15"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Subject Name"
                    android:textColor="@color/cream_white"
                    android:textSize="30dp"
                    android:fontFamily="@font/roboto_bold"
                    />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="right">


                    <com.google.android.material.button.MaterialButton
                        android:backgroundTint="#879A5B"
                        android:id="@+id/textButton"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="3/5"
                        android:textSize="15dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textColor="@color/cream_white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="right"
                        app:cornerRadius="20dp"
                        android:padding="10dp"
                        app:iconTint="@color/cream_white"
                        app:icon="@drawable/ic_baseline_star_24"/>

                </RelativeLayout>

            </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:orientation="horizontal"
            >

            <TextView
                android:maxLength="70"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Detailed description about a subject which should be here"
                android:textColor="@color/dark_grey_mate"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_regular"
                />


        </LinearLayout>



        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/subject_enter"
                android:backgroundTint="#B144D4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Enter"
                android:textSize="15dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/cream_white"
                android:fontFamily="@font/roboto_bold"
                app:cornerRadius="20dp"
                android:padding="5dp"
                android:elevation="20dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>


    </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>